<Window x:Class="AirportDispatcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AirportDispatcher"
        mc:Ignorable="d"
        Title="Диспетчер Аэропорта" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <UniformGrid Columns="3" Background="{StaticResource DodgerBlue}">
                <Image/>
                <TextBlock Text="Название компании" Style="{StaticResource Title}"/>
                <StackPanel>
                    
                </StackPanel>
            </UniformGrid>
            <UniformGrid Columns="2" Background="{StaticResource DeepBlue}" Grid.Row="1">
                <TextBlock Style="{StaticResource Menu}" Text="Регистрация на авиарейс" MouseLeftButtonDown="RegAirlineTextBlockMouseLeftButtonDown"/>
                <TextBlock Style="{StaticResource Menu}" Text="Регистрация пассажира на рейс" MouseLeftButtonDown="RegPassengerTextBlockMouseLeftButtonDown"/>
            </UniformGrid>
        </Grid>
        <Frame x:Name="NavigatedFrame" Grid.Row="1" NavigationUIVisibility="Hidden" Navigated="MainFrameNavigated" />
    </Grid>
</Window>
