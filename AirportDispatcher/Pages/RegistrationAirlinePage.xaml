<Page x:Class="AirportDispatcher.Pages.RegistrationAirlinePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AirportDispatcher.Pages"
      mc:Ignorable="d" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrationAirlinePage">

    <Grid Background="#d1d3d2">
        <Border MinWidth="650" Margin="15" Background="White" VerticalAlignment="Center" Padding="15" MaxWidth="1000" CornerRadius="15">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="LightGray" ShadowDepth="1"/>
            </Border.Effect>
            <StackPanel>
                <UniformGrid Columns="2">
                    <TextBlock Text="Номер полета" Style="{StaticResource MaterialDesignBody1TextBlock}"/>
                    <TextBox materialDesign:HintAssist.Hint="Введите номер полета" x:Name="IndexFlightTextBox" Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                    <TextBlock Text="Название авиакомпании" Style="{StaticResource MaterialDesignBody1TextBlock}"/>
                    <ComboBox x:Name="AirlineComboBox" Style="{StaticResource MaterialDesignComboBox}"/>
                    <TextBlock Text="Дата и время отправления" Style="{StaticResource MaterialDesignBody1TextBlock}"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <DatePicker Style="{StaticResource MaterialDesignFilledDatePicker}" />
                        <materialDesign:TimePicker Style="{StaticResource MaterialDesignFilledTimePicker}"/>
                    </StackPanel>
                    <TextBlock Text="Всего мест в самолёте" Style="{StaticResource MaterialDesignBody1TextBlock}"/>
                    <TextBox materialDesign:HintAssist.Hint="Введите количество всех мест в самолете" x:Name="CountPlaceAllTextBox" Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                    <TextBlock Text="Свободных мест" Style="{StaticResource MaterialDesignBody1TextBlock}"/>
                    <TextBox materialDesign:HintAssist.Hint="Введите количество свободных мест" x:Name="CountPlaceRemainsTextBox" Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                    <TextBlock Text="Аэропорт отбытия" Style="{StaticResource MaterialDesignBody1TextBlock}"/>
                    <ComboBox x:Name="AirportFromComboBox" Style="{StaticResource MaterialDesignOutlinedComboBox}"/>
                    <TextBlock Text="Аэропорт прибытия" Style="{StaticResource MaterialDesignBody1TextBlock}"/>
                    <ComboBox x:Name="AirportToComboBox" Style="{StaticResource MaterialDesignOutlinedComboBox}"/>
                </UniformGrid>
                <Button Margin="5" x:Name="RegButton" Click="RegButtonClick" Content="Зарегестрировать рейс" Style="{StaticResource MaterialDesignRaisedLightButton}" />
            </StackPanel>
        </Border>
    </Grid>
</Page>
