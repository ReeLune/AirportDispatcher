<Page x:Class="AirportDispatcher.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AirportDispatcher.Pages"
      mc:Ignorable="d" 
      
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid Background="#d1d3d2">
        <UniformGrid Columns="2" HorizontalAlignment="Center" VerticalAlignment="Center" Height="250">
            <Button Margin="25" Height="75" x:Name="RegAirButton" Content="Регистрация авиарейса" Style="{StaticResource MaterialDesignFlatDarkBgButton}" FontSize="16" Click="RegAirButtonClick"/>
            <Button Margin="25" Height="75" x:Name="ShowAirButton" Content="Просмотр всех авиарейсов" Style="{StaticResource MaterialDesignFlatDarkBgButton}" FontSize="16" Click="ShowAirButtonClick"/>            
            <Button Margin="25" Height="75" x:Name="RegPassButton" Content="Регистрация пассажира" Style="{StaticResource MaterialDesignFlatDarkBgButton}" FontSize="16" Click="RegPassButtonClick"/>
            <Button Margin="25" Height="75" x:Name="ViewPassButton" Content="Просмотр всех пассажиров" Style="{StaticResource MaterialDesignFlatDarkBgButton}" FontSize="16" Click="ViewPassButtonClick"/>
        </UniformGrid>
    </Grid>
</Page>
